# Unix
alias l="ls -al"
alias ln="ln -v"
alias lh='ls -Alh'
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias tlf="tail -f"
alias ...='../..'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias g='git'
alias gs='git status'
alias gi='git'
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias top="sudo htop" # alias top and fix high sierra bug

# betty
alias betty=~/betty/main.rb

# git
alias gci="git pull --rebase && rake && git push"
alias gbd='git checkout -q master && git for-each-ref refs/heads/ "--format=%(refname:short)" | while read branch; do mergeBase=$(git merge-base master $branch) && [[ $(git cherry master $(git commit-tree $(git rev-parse $branch^{tree}) -p $mergeBase -m _)) == "-"* ]] && git branch -D $branch; done'

# sourcetree
alias st="stree"

# Bundler
alias b="bundle"
alias be='bundle exec'
alias bu='bundle update'
alias dm='bundle exec rake db:migrate && bundle exec rake db:test:prepare'

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"
alias dm="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias rk="rake"
alias br='bundle exec rspec'
alias cop='bundle exec rubocop --auto-correct'

# Docker
alias de='env | grep DOCKER_'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias ctags="`brew --prefix`/bin/ctags"

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
